<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.MobirollerEcommerceApp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceApp">
        <activity android:name="com.example.MobirollerEcommerceApp.activities.MyProductsActivity"></activity>
        <activity android:name="com.example.MobirollerEcommerceApp.activities.SellerAddActivity" />
        <activity android:name="com.example.MobirollerEcommerceApp.activities.ShowAllActivity" />
        <activity android:name="com.example.MobirollerEcommerceApp.activities.DetailedActivity" />
        <activity android:name="com.example.MobirollerEcommerceApp.activities.OnBoardingActivity" />
        <activity android:name="com.example.MobirollerEcommerceApp.activities.RegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.MobirollerEcommerceApp.activities.LoginActivity" />
        <activity android:name="com.example.MobirollerEcommerceApp.activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
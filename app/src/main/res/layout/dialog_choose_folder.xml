<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_inputs"
        android:layout_width="match_parent"
        android:minWidth="400dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_rect_shadow_btn"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_basvuru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Action"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/grey_font"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_700">
        </View>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_choose_kamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="My Products">
        </androidx.appcompat.widget.AppCompatButton>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_700">
        </View>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_choose_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Add Product">
        </androidx.appcompat.widget.AppCompatButton>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/material_grey_700">
        </View>


    </LinearLayout>


</LinearLayout>